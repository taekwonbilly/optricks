
class primitive_pointer File{
	def File(c_string s, c_string t='r'){
  	this = (extern File fopen(c_string a, c_string b))(s,t);
	};
	def void flush(){
		(extern void fflush(File a))(this);
	};
	def void close(){
		this.flush();
		(extern c_int fclose(File a))(this);
	};
};

def File operator<<(File f, char c){
	(extern c_int fputc(char c,File a))(c, f);
	return f;
};

def File operator<<(File f, c_string c){
	(extern c_int fputs(c_string c, File p))(c,f);
	return f;
};
